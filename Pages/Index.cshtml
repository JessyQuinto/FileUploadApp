    .container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 50px;
        font-family: 'Arial', sans-serif;
        color: #333;
        background-color: #f0f4f8;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
